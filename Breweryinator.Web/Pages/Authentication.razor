@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<RemoteAuthenticatorView Action="@Action">
    <LoggingIn>
        <div class="container py-5 text-center">
            <i class="bi bi-google fs-1 text-primary"></i>
            <h3 class="mt-3">Signing in with Google…</h3>
            <div class="spinner-border text-primary mt-3" role="status">
                <span class="visually-hidden">Loading…</span>
            </div>
        </div>
    </LoggingIn>
    <LogOut>
        <div class="container py-5 text-center">
            <i class="bi bi-box-arrow-right fs-1 text-secondary"></i>
            <h3 class="mt-3">Signing out…</h3>
        </div>
    </LogOut>
</RemoteAuthenticatorView>

@code {
    [Parameter] public string Action { get; set; } = string.Empty;
}
