@inject NavigationManager Navigation

<nav class="navbar navbar-expand-lg navbar-dark bg-secondary shadow-sm">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <i class="bi bi-cup-hot-fill me-2"></i>Breweryinator
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarMain">
            <AuthorizeView>
                <Authorized>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                                <i class="bi bi-house-fill me-1"></i>Home
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/beers">
                                <i class="bi bi-droplet-fill me-1"></i>Beers
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/batches">
                                <i class="bi bi-layers-fill me-1"></i>Batches
                            </NavLink>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-2">
                        <span class="text-light small">
                            <i class="bi bi-person-circle me-1"></i>@context.User.Identity?.Name
                        </span>
                        <button class="btn btn-outline-light btn-sm" @onclick="Logout">
                            <i class="bi bi-box-arrow-right me-1"></i>Sign out
                        </button>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <ul class="navbar-nav me-auto"></ul>
                    <a class="btn btn-outline-light btn-sm" href="authentication/login">
                        <i class="bi bi-google me-1"></i>Sign in with Google
                    </a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    private void Logout()
    {
        Navigation.NavigateToLogout("authentication/logout");
    }
}
